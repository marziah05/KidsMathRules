<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/contentPedding"
    android:background="@drawable/bg2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:gravity="center"
        >
        <ImageView
            android:src="@drawable/story"
            android:layout_width="@dimen/imageWidth"
            android:layout_height="@dimen/imageHidth" />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_marginRight="@dimen/paddingLeft"
                android:layout_marginLeft="@dimen/paddingLeft"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textColor="@color/text"
                    android:id="@+id/rules"
                    android:textSize="@dimen/descriptionText"
                    android:text="@string/storyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/back"
        android:background="@drawable/pinkback"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight" />
</RelativeLayout>

